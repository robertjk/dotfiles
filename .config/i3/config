### Set some values

set $mod Mod4

# Font used by i3 and dmenu
set $fontname Inconsolata
set $fontsize 14px

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:$fontname $fontsize

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Screen locker
set $screen-lock "i3lock --color=000000"


### Main keybindings

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
# start a terminal in the current directory (e.g. the same as previous terminal)
bindsym $mod+Shift+Return exec i3-sensible-terminal -cd "`xcwd`"

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher) setting custom font
# For unknown reason font size need to be decreased by 1px to make it match
# the size set for i3 window titles and bar.
bindsym $mod+d exec rofi -show run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
# default was: $mod+d
bindsym $mod+Shift+a focus child

# Workspace names
set $workspace_www 1:www
set $workspace_programming 2:programming
set $workspace_communication 3:communication
set $workspace_music 4:music
set $workspace_documents 5:documents
set $workspace_dictionary 6:dictionary
set $workspace_torrent 7:torrent
set $workspace_graphics 8:graphics

# switch to workspace
bindsym $mod+1 workspace $workspace_www
bindsym $mod+2 workspace $workspace_programming
bindsym $mod+3 workspace $workspace_communication
bindsym $mod+4 workspace $workspace_music
bindsym $mod+5 workspace $workspace_documents
bindsym $mod+6 workspace $workspace_dictionary
bindsym $mod+7 workspace $workspace_torrent
bindsym $mod+8 workspace $workspace_graphics
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
# For some reason 7th and 8th workspaces don't want with nubers
bindsym $mod+Shift+7 move container to workspace $workspace_torrent
bindsym $mod+Shift+8 move container to workspace $workspace_graphics
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Needed for i3blocks keyindicators
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks

### Custom keybindings

# Lock on keypress.
bindsym $mod+Shift+o exec $screen-lock

# shortcut to selection widget (primary)
bindsym $mod+c exec clipster -s


### Application settings

# Assign applications to workspaces
assign [class="Firefox"]             → workspace $workspace_www
assign [class="Chromium"]            → workspace $workspace_www
assign [class="Google-chrome"]       → workspace $workspace_www
assign [class="Gvim"]                → workspace $workspace_programming
assign [class="jetbrains-studio"]    → workspace $workspace_programming
assign [class="Thunderbird"]         → workspace $workspace_communication
assign [class="Rocket.Chat+"]        → workspace $workspace_communication
assign [class="Deadbeef"]            → workspace $workspace_music
assign [class="MuPDF"]               → workspace $workspace_documents
assign [class="Zathura"]             → workspace $workspace_documents
assign [class="Geeqie"]              → workspace $workspace_documents
# Both Soffice and libreoffice classes are used by libreoffice apps
assign [class="Soffice|libreoffice"] → workspace $workspace_documents
assign [class="GoldenDict"]          → workspace $workspace_dictionary
assign [class="qBittorrent"]         → workspace $workspace_torrent
assign [class="Gimp"]                → workspace $workspace_graphics
assign [class="Inkscape"]            → workspace $workspace_graphics

# Change window settings
for_window [class="URxvt"] layout stacked
for_window [class="firefoxdeveloperedition"] layout tabbed
for_window [class="firefoxdeveloperedition" instance="Devtools"] floating enable
for_window [class="firefoxdeveloperedition" instance="Devtools"] resize width 600px
for_window [class="firefoxdeveloperedition" instance="Devtools"] resize height 500px
for_window [class="Gvim"] move left
for_window [class="Gvim"] layout tabbed
for_window [class="Thunderbird"] layout tabbed
for_window [class="Thunderbird" instance="Msgcompose"] floating enable
for_window [class="Gimp"] layout tabbed
for_window [class="Geeqie"] layout tabbed
for_window [class="Lightscreen"] floating enable
for_window [class="MuPDF"] layout tabbed
for_window [class="Zathura"] layout tabbed
for_window [class="VirtualBox Manager"] layout tabbed
for_window [class="VirtualBox Machine"] fullscreen enable

# Automatically lock the screen after inactivity.
# exec xautolock -time 3 -locker $screen-lock


### Running applications

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

# Applications to run automatically after i3 startup
exec firefox-developer-edition
exec deadbeef
exec goldendict
exec thunderbird
exec gvim
# Terminal
exec --no-startup-id i3-msg 'workspace $workspace_programming; exec i3-sensible-terminal'
# Non-window applications
exec --no-startup-id workrave
exec --no-startup-id dropbox
exec --no-startup-id udiskie --no-notify --tray
exec --no-startup-id clipster -d

