################################################################################
#
# Output configuration
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
#
################################################################################


set $laptop_internal eDP-1
set $external_home "Dell Inc. DELL P2419H CGSGFZ2"
set $external_tv HDMI-A-1

# Output settings
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# -823 is the value to align external Dell monitors on real height of the laptop
# screen
output $laptop_internal  pos 0 0    res 1920x1080
output $external_home    pos 1920 0 res 1920x1080

# Assign workspaces to outputs
workspace $workspace_www        output $external_home
workspace $workspace_editor     output $external_home
workspace $workspace_terminals  output $external_home
workspace $workspace_portal     output $external_home
workspace $workspace_mail       output $laptop_internal
workspace $workspace_multimedia output $external_tv
